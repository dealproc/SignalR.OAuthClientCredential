<Window x:Class="Device.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="5*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>

		<StackPanel Grid.Column="0">
			<TextBlock Text="Connection Status" />
			<Label x:Name="lbConnectionStatus" />
		</StackPanel>
		<StackPanel Grid.Column="1">
			<TextBlock Text="Connection Information" />
			<Label x:Name="lbStatus" />
		</StackPanel>
		<StackPanel Grid.Column="2">
			<TextBlock Text="Server Time" />
			<Label x:Name="lbServerTime" />
		</StackPanel>
		
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.ColumnSpan="3" Grid.Row="1">
			<Button Height="50" x:Name="btnToPress" Content="Click Me!" />
		</StackPanel>
	</Grid>
</Window>
